select name, published_year, genre
from books;
--1
select distinct country
from authors;
--2
select *
from books
where published_year between '1/1/2020' and '12/1/2022';
--3
select name, genre
from books
where genre = 'DETECTIVE';
--4
select concat(last_name, ' ', first_name) as author
from authors;
--5
select concat(last_name, ' ', first_name) as author, country
from authors
where country in ('Germany', 'France')
order by author;
--6
select name, country, published_year, price, genre
from books
where not genre = 'ROMANS'
  and price < 500;
--7
select *
from authors
where gender = 'Female'
limit 3;
--8
select *
from authors
where email like '%.com'
  and first_name like '____'
  and gender = 'Female';
--9
select country, count(*)
from authors
group by country;
--10
select country, count(*) as numbers_of_authors
from authors
group by country
having count(*) = 3
order by country;
--11
select genre, sum(price)
from books
group by genre;
--12
select genre, min(price)
from books
where genre in ('ROMANS', 'DETECTIVE')
group by genre;
--13
select genre, price
from books
where genre in ('HISTORY', 'BIOGRAPHY');
--14
select p.name, language
from books
         JOIN languages l on l.id = books.language_id
         JOIN publishers p on p.id = books.publisher_id;
--15
select p.name, language
from books
         JOIN languages l on l.id = books.language_id
         LEFT JOIN publishers p on p.id = books.publisher_id;
--16
select concat(last_name, ' ', first_name) as full_name, name
from authors
         LEFT JOIN books b on authors.id = b.author_id;
--17
select language, count(language)
from books
         JOIN languages l on l.id = books.language_id
group by language
order by count(language) desc;
--18
select publishers.name, round(avg(price))
from publishers
         JOIN books b on publishers.id = b.publisher_id
group by publishers.name;
--19
select first_name, last_name, name, published_year
from authors
         join books b on authors.id = b.author_id
where published_year between '1/1/2010' and '1/1/2015';
--20
select concat(last_name, ' ', first_name) as full_name, sum(price)
from authors
         JOIN books b on authors.id = b.author_id
where published_year between '1/1/2010' and '1/1/2015'
group by full_name;
